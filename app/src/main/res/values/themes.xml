<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTonWallet" parent="Theme.Material3.Light.NoActionBar">
        <item name="background">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_white</item>
        <item name="colorPrimaryVariant">@color/blue_white</item>
        <item name="colorPrimaryDark">@color/grey_text</item>
        <item name="colorAccent">@color/blue_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSurface">@color/green</item>

        <!-- this one for bottom navigation select elipce -->
        <item name="colorSecondaryContainer">@color/blue_white_alpha</item>
        <!-- this one for bottom navigation inactive icon -->
        <item name="colorOnSurfaceVariant">@color/grey_text</item>
        <!-- this one for bottom navigation active icon  -->
        <item name="colorOnSecondaryContainer">@color/blue_white</item>
        <!-- this one for bottom navigation active text  -->
        <item name="colorOnSurface">@color/blue_white</item>

        <item name="colorOnSecondary">@color/blue_white</item>


        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
        <item name="android:textColorSecondaryInverse">@color/grey_white_bkg</item>

        <item name="android:colorMultiSelectHighlight">@color/blue_white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- list divider color. -->
        <item name="colorOutlineVariant">@color/grey_background</item>
        <item name="android:fontFamily">@font/roboto</item>

        <item name="colorOutline">@color/grey_uncheck</item>
        <item name="colorSurfaceContainerHighest">@color/grey_uncheck</item>

        <item name="colorOnPrimary">@color/blue_white</item>
    </style>


    <style name="Theme_primaryColors" parent="Theme.Material3.Dark.NoActionBar">
        <item name="background">@color/blue_white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_trans_66</item>
        <item name="android:textColorSecondaryInverse">@color/white_trans_15</item>
        <item name="android:statusBarColor">@color/blue_white</item>
        <item name="android:navigationBarColor">@color/blue_white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>



    <style name="text_general">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="text_big" parent="text_general">
        <item name="android:textSize">@dimen/text_size_big</item>
<!--        <item name="android:textFontWeight">500</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_toolbar_title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="text_description" parent="text_general">
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_48</item>
        <item name="android:layout_marginBottom">@dimen/margin_32</item>
    </style>

    <style name="button_general" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:background">@drawable/select_button</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="button_inline" parent="button_general">
        <item name="android:textColor">@color/blue_white</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="button_inline_v2" parent="text_general">
        <item name="android:textColor">@color/blue_white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="pin_row">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="pin_dot">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">@dimen/pin_dot_size</item>
        <item name="android:layout_height">@dimen/pin_dot_size</item>
    </style>

    <style name="button_back">

        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="Theme.MyTonWallet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="wallet_top_btn_item_layout">
        <item name="android:layout_width">89dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_8</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundCornImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="list_divider_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_background</item>
    </style>


</resources>