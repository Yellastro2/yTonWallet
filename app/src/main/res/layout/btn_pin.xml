<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pincode_frag_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="@dimen/pin_btn_size"
        android:layout_height="@dimen/pin_btn_size"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bkg_pin_btn"
        android:backgroundTint="?android:textColorSecondaryInverse">

        <TextView
            style="@style/text_general"
            android:textSize="22sp"
            android:textColor="?android:textColorPrimary"
            android:id="@+id/btn_pin_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <TextView
            android:id="@+id/btn_pin_text"
            style="@style/text_general"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC" />

    </LinearLayout>
</LinearLayout>
