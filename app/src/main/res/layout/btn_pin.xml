<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pincode_frag_btn"
        android:layout_width="@dimen/pin_btn_size"
        android:layout_height="@dimen/pin_btn_size"
        android:background="@drawable/bkg_pin_btn"
        android:gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView

            style="@style/text_general"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:id="@+id/btn_pin_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <TextView
            android:id="@+id/btn_pin_text"
            style="@style/text_general"
            android:textSize="14sp"
            android:textColor="@color/white_trans_66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC" />
    </LinearLayout>
