<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.auth.ImportMnemoFragment">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:background="@color/white"
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:title="@string/title_import_mnemo"
                app:expandedTitleGravity="center_horizontal"
                app:collapsedTitleGravity="left"
                app:titleTextAppearance="@style/text_toolbar_title"
                app:collapsedTitleTextAppearance="@style/text_toolbar_title"
                app:collapsedTitleTextColor="@color/black"
                app:titleCollapseMode="scale"
                app:expandedTitleMarginBottom="12dp"
                app:expandedTitleTextColor="#00FFFFFF"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

                <TextView
                    android:id="@+id/fr_import_mnemo_desc"
                    style="@style/text_general"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="112dp"
                    android:layout_marginHorizontal="@dimen/margin_48"
                    app:layout_collapseMode="pin"
                    android:layout_gravity="top"
                    android:text="Lorem Ipsum Iran Lo"/>

                <TextView
                    android:id="@+id/fr_import_title_text"
                    style="@style/text_big"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="62dp"
                    android:layout_marginHorizontal="@dimen/margin_48"
                    app:layout_collapseMode="parallax"
                    android:layout_gravity="top"
                    android:text="@string/title_import_mnemo"/>

                <androidx.appcompat.widget.Toolbar
                    app:titleTextAppearance="@style/text_toolbar_title"
                    android:id="@+id/toolbar"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_64"
                    app:layout_collapseMode="pin"
                    android:fadingEdgeLength="0dp"
                    app:navigationIcon="@drawable/ic_back"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/fr_input_mnemo_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/fr_import_mnemo_input_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/fr_import_mneno_btn_done"
                    style="@style/button_general"
                    android:text="@string/btn_continue" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
