<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    tools:context=".fragments.EventInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bkg_dialog_bottom"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/fr_event_title"
            style="@style/text_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:text="Swap"
            android:textSize="@dimen/text_size_22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fr_event_cross_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_cross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/fr_event_title_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fr_event_title">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/fr_event_lay_nft_title"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="120dp">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/roundCornImage"
                    android:visibility="visible"
                    android:id="@+id/it_jet_icon_nft"
                    android:src="@drawable/img_jet_holder"
                    android:layout_width="72dp"
                    android:layout_height="72dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/fr_event_titled_nft_text1"
                        style="@style/text_big"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dave Mini"/>
                    <TextView

                        android:id="@+id/fr_event_titled_nft_text2"
                        style="@style/text_general"
                        android:textColor="@color/grey_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Standalone NFT"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:id="@+id/fr_event_lay_swap_title"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="120dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="visible"
                    android:id="@+id/it_jet_icon_swap_layout"
                    android:layout_width="64dp"
                    android:layout_height="72dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        app:shapeAppearanceOverlay="@style/circleImageView"
                        android:id="@+id/fr_event_image_swap1"
                        android:layout_width="@dimen/size_img_48"
                        android:layout_height="@dimen/size_img_48"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="visible"
                        android:src="@drawable/img_jet_holder" />

                    <com.google.android.material.imageview.ShapeableImageView
                        app:shapeAppearanceOverlay="@style/circleImageView"
                        android:id="@+id/fr_event_image_swap2"
                        android:layout_width="@dimen/size_img_48_plusstroke"
                        android:layout_height="@dimen/size_img_48_plusstroke"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="visible"
                        android:src="@drawable/img_jet_holder"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/fr_event_titled_swap1_text"
                        style="@style/text_big"
                        android:textSize="22sp"
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-100 TON"/>
                    <TextView

                        android:id="@+id/fr_event_titled_swap2_text"
                        style="@style/text_big"
                        android:textColor="@color/green"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1000 MY"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fr_event_trans_lay"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text_big"
                    android:textSize="36sp"
                    android:textColor="@color/green"
                    android:id="@+id/fr_event_amount_text"
                    android:layout_marginTop="38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-500 TON" />

                <TextView
                    android:id="@+id/fr_event_amount_usd"
                    style="@style/text_general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="$1 256"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/text_size_22" />

                <LinearLayout
                    android:id="@+id/fr_event_message_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/bkg_lay_20corner"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/fr_event_message_text"
                        style="@style/text_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/body_msg_encrypt"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/fr_event_btn_decrypt"
                        style="@style/text_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:selectableItemBackground"
                        android:layout_marginStart="8dp"
                        android:text="@string/btn_decrypt"
                        android:textColor="@color/blue_white"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_heigth_12"
            android:layout_marginTop="24dp"
            android:background="@color/grey_background"
            app:layout_constraintTop_toBottomOf="@+id/fr_event_title_lay"
            tools:layout_editor_absoluteX="0dp" />

        <TextView

            android:id="@+id/textView9"
            style="@style/text_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="Transaction Details"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fr_event_lay_date"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9">

            <TextView
                style="@style/text_general"
                android:textColor="@color/grey_text"
                android:id="@+id/fr_event_date_title"

                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Received at"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/text_general"
                android:id="@+id/fr_event_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:text="31 Jan, 8:30"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/list_divider_info"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fr_event_lay_swap_send"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/fr_event_lay_date"
            >

            <TextView
                style="@style/text_general"
                android:textColor="@color/grey_text"
                android:id="@+id/fr_event_from_title"

                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="From"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/text_general"
                android:id="@+id/fr_event_from_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:text="31 Jan, 8:30"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/circleImageView"
                android:id="@+id/fr_event_from_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/img_jet_holder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fr_event_from_value"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/text_general"
                android:id="@+id/fr_event_image_symbol"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="A"
                app:layout_constraintBottom_toBottomOf="@+id/fr_event_from_image"
                app:layout_constraintEnd_toEndOf="@+id/fr_event_from_image"
                app:layout_constraintStart_toStartOf="@+id/fr_event_from_image"
                app:layout_constraintTop_toTopOf="@+id/fr_event_from_image" />

            <View
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/list_divider_info"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fr_event_lay_to"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/fr_event_lay_swap_send"
            >

            <TextView
                style="@style/text_general"
                android:textColor="@color/grey_text"
                android:id="@+id/fr_event_receive_val_title"

                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Received at"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/text_general"
                android:id="@+id/fr_event_receive_val_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:text="31 Jan, 8:30"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/list_divider_info"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fr_dial_lay_amount"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/fr_event_lay_to"
            >

            <TextView
                style="@style/text_general"
                android:textColor="@color/grey_text"
                android:id="@+id/fr_event_text_amount_title"

                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/title_price_per"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/text_general"
                android:id="@+id/fr_event_amount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:text="31 Jan, 8:30"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/list_divider_info"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fr_dial_lay_fee"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/fr_dial_lay_amount"
           >

            <TextView
                android:id="@+id/textView1340"
                style="@style/text_general"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Fee"
                android:textColor="@color/grey_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fr_event_text_fee"
                style="@style/text_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="20dp"
                android:text="31 Jan, 8:30"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_heigth_12"
            android:background="@color/grey_background"
            app:layout_constraintTop_toBottomOf="@+id/fr_dial_lay_fee"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fr_dial_lay_end"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/fr_event_linkto_exp"
                style="@style/text_general"
                android:layout_width="wrap_content"
                android:background="?android:selectableItemBackground"
                android:textColor="@color/blue_white"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="View in Explorer"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>